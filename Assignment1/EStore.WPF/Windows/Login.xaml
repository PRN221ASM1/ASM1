<Window x:Class="EStore.WPF.Windows.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EStore.WPF.Windows"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <Grid Background="LightBlue">

        <Label Grid.Row="0" Content="Sales Management" HorizontalAlignment="Center" FontSize="24" FontWeight="Bold" Margin="0,51,0,0"/>

        <StackPanel HorizontalAlignment="Center" Width="223" Margin="0,113,0,10">
            <Label x:Name="labName" Content="Name" Width="200"/>
            <TextBox x:Name="txtName" Width="200"></TextBox >
            <Label x:Name="labPassword" Content="Password" Width="200"/>
            <PasswordBox x:Name="txtPassword" Width="200"></PasswordBox>
            <Button x:Name="btnLogin" Width="50" Content="Login" Click="btnLogin_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
